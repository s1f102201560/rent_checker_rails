<%= form_with model: @user do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>